<p id="notice"><%= notice %></p>

<div class="well">
<h1>Shopping Lists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr style="padding-bottom: 15px;">
        <td style="padding-right: 10px;"><%= todo_list.title %></td>
        <td style="padding-right: 20px;"><%= todo_list.description %></td>
        <td style="padding-right: 5px;"><%= link_to 'Show', todo_list %></td>
        <td style="padding-right: 5px;"><%= link_to 'Edit', edit_todo_list_path(todo_list) %></td>
        <td style="padding-right: 5px;"><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shopping List', new_todo_list_path %>
</div>

